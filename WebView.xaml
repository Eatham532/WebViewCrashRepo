<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebView_Crash.WebView"
             Title="WebView">
    <StackLayout x:Name="MainStackLayout">
        <WebView
            Source="https://microsoft.com"
            HeightRequest="500"/>
        <Button
            x:Name="DisplayAlertBugBtn"
            Text="Click to close. This is the workaround."
            Clicked="DisplayAlertBugBtn_Clicked"
            Margin="0, 20, 0, 0"/>
    </StackLayout>
</ContentPage>